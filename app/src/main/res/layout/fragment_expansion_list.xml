<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list"
    android:name="com.lenoxys.mtgextensions.business.model.ExpansionDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/cardview_shadow_start_color"
    app:layoutManager="LinearLayoutManager"
    tools:context=".business.model.ExpansionDetailFragment"
    tools:listitem="@layout/card_item" >

    <TextView
        android:id="@+id/fragment_expansion_cards"
        android:layout_width="147dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="@string/card_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_expansion_name" />

    <TextView
        android:id="@+id/fragment_expansion_date"
        android:layout_width="154dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:text="@string/date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_expansion_name" />

    <TextView
        android:id="@+id/fragment_expansion_name"
        android:layout_width="377dp"
        android:layout_height="59dp"
        android:text="@string/expansion_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_expansion_recyclerView2"
        android:layout_width="379dp"
        android:layout_height="630dp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_expansion_date">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>