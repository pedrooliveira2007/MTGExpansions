<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/Black"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"

            android:src="@mipmap/card_layout" />

        <TextView
            android:id="@+id/expansionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:text="@string/expansion_name"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expansionDate"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:text="@string/date"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/expansionCards"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="4dp"
            android:text="@string/card_count"
            android:textAlignment="textEnd"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/expansionId"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/expansionDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="-1dp"
            android:text="@string/id"
            android:textColor="@color/Black"
            android:textSize="8sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>