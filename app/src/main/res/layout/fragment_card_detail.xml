<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#804433"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:id="@+id/fragment_card_detail">

    <Button
        android:id="@+id/card_back"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@mipmap/card_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_back"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="cardName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_image" />

    <TextView
        android:id="@+id/card_rarity"
        android:layout_width="198dp"
        android:layout_height="23dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="4dp"
        android:text="Rarity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_name" />

    <TextView
        android:id="@+id/card_mana_cost"
        android:layout_width="197dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:text="ManaCost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_name" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="198dp"
        android:layout_height="23dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="4dp"
        android:text="Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_rarity" />

    <TextView
        android:id="@+id/card_price"
        android:layout_width="199dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_artist" />

    <TextView
        android:id="@+id/card_artist"
        android:layout_width="198dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="Artist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_mana_cost" />


</androidx.constraintlayout.widget.ConstraintLayout>