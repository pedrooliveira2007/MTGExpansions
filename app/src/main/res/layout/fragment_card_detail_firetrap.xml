<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_card_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/dungeon_background"
        app:layout_anchor="@+id/imageView"
        app:layout_anchorGravity="center"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:scaleType="fitXY"
                android:src="@mipmap/card_image"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <TextView
            android:id="@+id/card_name"
            style="@style/card_detail_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="18sp"
            tools:text="card name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textColor="@color/gold"
            android:weightSum="10">

            <TextView
                android:id="@+id/card_rarity"
                style="@style/card_detail_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textColor="@color/gold"
                tools:text="rarity" />

            <TextView
                android:id="@+id/card_type"
                style="@style/card_detail_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textColor="@color/gold"
                tools:text="Type" />
        </LinearLayout>

        <TextView
            style="@style/card_detail_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Trading sites"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_price0"
                    style="@style/card_detail_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoLink="all"
                    android:clickable="true"
                    tools:text="site1" />

                <TextView
                    android:id="@+id/card_price1"
                    style="@style/card_detail_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoLink="all"
                    android:clickable="true"
                    tools:text="site2" />

                <TextView
                    android:id="@+id/card_price2"
                    style="@style/card_detail_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoLink="all"
                    android:clickable="true"
                    tools:text="site3" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>